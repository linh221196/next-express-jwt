<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>User Page</title>
  </head>
  <body>
    <div class="container">
      <div class="row mt-2">
        <form
          method="post"
          action="/user/create-user"
          class="flex justify-content-center">
          <div class="mb-3 col-6">
            <label for="email" class="form-label">Email address</label>
            <input
              class="form-control"
              type="email"
              id="email"
              aria-describedby="email"
              name="email"
              required />
            <div id="emailHelp" class="form-text">
              We'll never share your email with anyone else.
            </div>
          </div>
          <div class="mb-3 col-6">
            <label for="username" class="form-label">User Name</label>
            <input
              type="text"
              class="form-control"
              id="username"
              aria-describedby="username"
              name="username"
              required />
          </div>
          <div class="mb-3 col-6">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              required />
          </div>
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="check-box" />
            <label class="form-check-label" for="check-box">Check me out</label>
          </div>

          <button  class="btn btn-primary" >Submit</button>
        </form>
      </div>
      <div class="mt-3">
        <table class="table mt-3">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Username</th>
              <th scope="col">Email</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% usersList.forEach((user, index) => { %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td class="flex flex-grow"><%= user.username %></td>
                <td><%= user.email %></td>
                <td class="row">
                  <form action="/edit-user/<%= user.id%>" method="GET" class="col">
                  <button class="btn btn-primary" 
                  onclick="handleEditClick('<%= user.id %>')">Edit</button>
                </form>
                
                  <form action="/delete-user/<%= user.id%>" method="POST" class="col">
                    <button class="btn btn-danger"  
                    onclick="handleDeleteClick('<%= user.id %>')">Delete</button>
                  </form>
                 
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>

  <script>
    // Stop bubble and handle edit button click
    function handleEditClick(userId) {
     // event.preventDefault(); 
      event.stopPropagation(); 
      const form = document.getElementById(`${userId}`);
      form.submit(); // Submit the form programmatically
    }
  
    // Stop bubble and handle delete button click
    function handleDeleteClick(userId) {
     // event.preventDefault(); // Stop the form's default behavior
      event.stopPropagation(); // Prevent event bubbling
      if (confirm("Are you sure you want to delete this user?")) {
        const form = document.getElementById(`${userId}`);
        form.submit(); // Submit the form programmatically
      }
    }
  </script>
</html>
